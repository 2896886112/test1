        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.houlai.dao.UserMapper">
    <select id="findUserByName" resultType="com.houlai.entity.User" parameterType="string">
        SELECT * FROM USER WHERE username = #{username}
